---
import Layout from "../layouts/Layout.astro";
import { ui } from "../i18n/ui.js";

const locale = (Astro.locals.lang as 'en' | 'fr') ?? 'en';
console.log('Locale in index:', locale);
---

<Layout>
  <div class="flex flex-col h-full items-center justify-center bg-gradient-to-br from-primary to-secondary min-h-screen">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold text-white mb-4">{ui[locale].index.title}</h1>
        <p class="py-6 text-lg text-white/90">
          {ui[locale].index.description}
        </p>
        <a href="/generator" class="btn btn-accent btn-lg">
          {ui[locale].index.button}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</Layout>